{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "joinCodes": {
      "$code": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "auctions": {
      ".read": "auth != null",
      "$auctionId": {
        ".write": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid)",
        "players": {
          "$playerId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "items": {
          "$itemId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    },
    "bids": {
      ".read": "auth != null",
      "$auctionId": {
        ".read": "auth != null",
        "$bidId": {
          ".write": "auth != null && (!data.exists() || data.child('bidderId').val() === auth.uid)"
        }
      }
    },
    "players": {
      ".read": true,
      "$playerId": {
        ".write": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid)"
      }
    }
  }
}