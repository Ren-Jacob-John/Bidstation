{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || (auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "$uid === auth.uid || (auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "joinCodes": {
      "$code": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "auctions": {
      ".read": "auth != null",
      "$auctionId": {
        ".write": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".validate": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        "players": {
          "$playerId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "items": {
          "$itemId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    },
    "bids": {
      ".read": "auth != null",
      "$auctionId": {
        ".read": "auth != null",
        "$bidId": {
          ".write": "auth != null && (!data.exists() || data.child('bidderId').val() === auth.uid)"
        }
      }
    },
    "players": {
      ".read": true,
      "$playerId": {
        ".write": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid)"
      }
    }
  }
}